{
  "name": "@laduke/tui",
  "description": "description",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/laduke/ballpit.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.7",
  "author": "Travis LaDuke <travisladuke@gmail.com>",
  "license": "MIT",
  "bin": "./bin.js",
  "type": "module",
  "scripts": {
    "test": "run-s test:*",
    "test:deps": "dependency-check --no-dev ./package.json",
    "test:standard": "standard",
    "test:test": "c8 ava",
    "format": "standard --fix",
    "build": "rollup bin.js -o dist/bin.js --format cjs && pkg ./dist/bin.js --out-path ./dist",
    "version": "auto-changelog -p --template keepachangelog auto-changelog --breaking-pattern 'BREAKING CHANGE:' && git add CHANGELOG.md",
    "prepublishOnly": "git push --follow-tags && gh-release -y"
  },
  "devDependencies": {
    "auto-changelog": "^2.4.0",
    "ava": "^4.2.0",
    "c8": "^7.11.0",
    "caxa": "^2.1.0",
    "dependency-check": "^4.1.0",
    "eslint-config-standard": "^17.0.0",
    "gh-release": "^6.0.4",
    "npm-run-all2": "^5.0.2",
    "pkg": "^5.6.0",
    "rollup": "^2.70.2",
    "standard": "*",
    "testdouble": "^3.16.4"
  }
}
